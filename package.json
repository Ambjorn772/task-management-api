{
  "name": "task-management-api",
  "version": "1.0.0",
  "description": "Мікросервісна архітектура для управління завданнями з двома сервісами: Tasks Service та Users Service",
  "main": "index.js",
  "dependencies": {
    "fastify": "^4.24.3",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.2.0"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --testPathPatterns=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:mutation": "stryker run",
    "lint": "npx eslint . --ext .js",
    "lint:fix": "npx eslint . --ext .js --fix",
    "format": "npx prettier --write \"**/*.{js,json,md}\"",
    "format:check": "npx prettier --check \"**/*.{js,json,md}\"",
    "build": "echo \"Build successful\" && exit 0",
    "prepare": "husky install",
    "pre-commit": "lint-staged && npm run lint && npm test && npm run build",
    "start:tasks": "node services/tasks-service/src/server.js",
    "start:users": "node services/users-service/src/server.js",
    "dev:tasks": "node services/tasks-service/src/server.js",
    "dev:users": "node services/users-service/src/server.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "microservices",
    "api",
    "task-management"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
